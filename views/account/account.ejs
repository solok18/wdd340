<%# Content Heading %>
 <% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%# flash message %>
<% if (message) {%>
<div class="flash-message">
    <p><%= message %></p>
</div><% } %>


<%# Error Display %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<!-- <p class="loginConfirm"> You're logged in.</p> -->

<% if (accountData) { %>
  <h2 class="account-welcome">Welcome <%= accountData.account_firstname %></h2>

  <ul class="account-updateInfo">
    <li>
      <a href="/account/update/<%= accountData.account_id %>">Update Account Information</a>
    </li>
  </ul>

  <% if (accountData.account_type === "employee" || accountData.account_type === "admin") { %>
    <h3 class="account-inventory">Inventory Management</h3>
    <p class="account-updateInv"><a href="/inv/">Management Inventory</a></p>
  <% } %>
<% } %>

