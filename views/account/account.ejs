<%# Content Heading %>
 <% if (title) { %>
<h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%# flash message %>
<% if (message) {%>
<div class="flash-message">
    <p><%= message %></p>
</div><% } %>


<%# Error Display %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<p class="loginConfirm"> You're logged in.</p>

<% if (accountData) { %>
  <h2>Welcome <%= accountData.account_firstname %></h2>

  <ul>
    <li>
      <a href="account/update/<%= accountData.account_id %>">Update Account Information</a>
    </li>
  </ul>

  <% if (accountData.account_type === "employee" || accountData.account_type === "admin") { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv/">Management Inventory</a></p>
  <% } %>
<% } %>

